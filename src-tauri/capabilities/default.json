{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "openfrp-launcher-default",
  "description": "Capability for the main window",
  "remote": {
    "urls": [
      "https://*.openfrp.net",
      "https://of-dev-api.bfsea.com"
    ]
  },
  "systemTray": {
    "iconPath": "icons/32x32.png",
    "iconAsTemplate": true
  },
  "windows": [
    "main",
    "oauth-login"
  ],
  "platforms": [
    "windows",
    "macOS",
    "linux"
  ],
  "notifications": {
    "title": "OpenFrp 跨平台启动器",
    "enabled": true
  },
  "allowlist": {
    "notification": {
      "all": true
    },
    "dialog": {
      "all": true
    },
    "window": {
      "all": true,
      "close": true,
      "listen": true
    }
  },
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "opener:default",
    "notification:allow-notify",
    "notification:allow-check-permissions",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-permission-state",
    "core:app:default",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-unmaximize",
    "core:window:allow-is-maximized",
    "process:default",
    "notification:default",
    "dialog:default",
    "dialog:allow-message",
    "autostart:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "deep-link:allow-register",
    "deep-link:allow-is-registered",
    "deep-link:allow-unregister",
    "deep-link:default",
    "deep-link:allow-get-current",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "core:window:allow-start-dragging",
    "core:window:allow-create",
    "core:window:allow-center",
    "core:window:allow-set-always-on-top",
    "core:webview:allow-create-webview-window",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.openfrp.net"
        },
        {
          "url": "https://api.openfrp.net"
        },
        {
          "url": "https://of-dev-api.bfsea.com"
        }
      ]
    }
  ],
  "deepLinks": [
    "openfrp"
  ]
}